{
    "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
    "version": 3,
    "title": "Main Theme",
    "settings":{
        "color":{
            "palette": [
                { "name": "Primary", "slug": "primary", "color": "#984216" },
                { "name": "Accent", "slug": "accent", "color": "#8D957E" },
                { "name": "Secondary", "slug": "secondary", "color": "#78989F" },
                { "name": "Background", "slug": "background", "color": "#E4D6C5" },
                { "name": "Text", "slug": "text", "color": "#6F4D3B" }

            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Cormorant Garamond, serif",
                    "name": "Cormorant Garamond",
                    "slug": "cormorant-garamond"
                },
                {
                    "fontFamily": "Lora, serif",
                    "name": "Lora",
                    "slug": "lora"
                }
            ]
        }
    },
    "styles":{
        "color": {
            "background": "var:preset|color|background",
            "text": "var:preset|color|text"
        },
        "spacing": {
            "padding": {
                "top": "40px",
                "bottom": "40px",
                "left": "30px",
                "right": "30px"
            }
        },
        "blocks": {
            "core/paragraph":{
                "typography": {
                    "fontFamily": "var:preset|font-family|lora",
                    "fontSize": "18px"
                },
                "color": {
                    "text": "var:preset|color|text"
                }
            },
            "core/navigation":{
                "color": {
                    "background": "var:preset|color|primary"
                },
                "spacing": {
                    "padding": {
                        "top": "15px",
                        "bottom": "15px",
                        "left": "20px",
                        "right": "20px"
                    }
                }
            },
            "core/navigation-link":{
                "typography": {
                    "fontFamily": "var:preset|font-family|lora",
                    "textTransform": "uppercase"
                },
                "color": {
                    "text": "var:preset|color|accent"
                }
            },
            "core/post-author-name":{
                "typography": {
                    "fontFamily": "var:preset|font-family|cormorant-garamond",
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "var:preset|color|secondary"
                }
            }
        }
    }

}